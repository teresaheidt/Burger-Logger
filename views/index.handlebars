{{!-- <h2 align="center">Burgers that have been devoured!</h2> --}}

<ul>
  {{#each burgers}}
    {{#unless notdevoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- <h2 align="center">Burgers not devoured!</h2> --}}

<ul align="center">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block notDevoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2 class="add">Make yourself a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burg">New burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <br>

<div class="button">
  <button align="center" type="submit">Devoured the burger!</button>
   <button align="center" type="delete">Delete Burger</button>
</div>

</form>
